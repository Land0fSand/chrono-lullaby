{
  // 禁用自动激活虚拟环境
  "python.terminal.activateEnvironment": false,
  
  // Python 解释器路径（使用 Poetry 管理的虚拟环境）
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  
  // 终端配置
  "terminal.integrated.env.windows": {},
  
  // Poetry 配置
  "python.poetryPath": "poetry",
  
  // 其他建议配置
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  }
}
